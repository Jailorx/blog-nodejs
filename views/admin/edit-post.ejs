<a href="/dashboard">&larr; Back</a>
<div class="subcontainer">
    <h2>Update Post</h2>
    <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" id="delete" value="Remove" class="adminBtn">
    </form>
</div>

<form action="/edit-post/<%= post._id %>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input type="text" placeholder="Title" name="title" value="<%= post.title %>">
    <label for="content">Content</label>
    <textarea name="content" cols="50" rows="10" placeholder="Add content here"><%= post.content %></textarea>

    <input class="adminBtn" type="submit" value="Update">

</form>